<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ***** MAIN ACTIVITY ***** -->

    <style name="main_activity_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_soft</item>
        <item name="android:textColor">@color/text_color_darker</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="davidthar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FDEBCF</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- ***** QUIZ ACTIVITY ***** -->

    <style name="button_answers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:backgroundTint">@color/background_dark</item>
        <item name="android:textColor">@color/text_color_darker</item>
    </style>

    <!-- ***** RANKING ACTIVITY ***** -->

    <style name="ranking_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_darker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ranking_names">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_darker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/placeholder_name</item>
    </style>

    <style name="ranking_points">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_darker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/placeholder_points</item>
    </style>

    <!-- ***** INFO ACTIVITY ***** -->

    <style name="social_icons">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- ***** ALL ACTIVITIES ***** -->

    <style name="button_back" parent="main_activity_buttons">
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="app_logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/harry_potter_logo</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

</resources>